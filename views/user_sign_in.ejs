<link rel="stylesheet" href="<%=assetPath('css/sign_in.css') %>">

<section class="sign-section">

    <div class="box2  animated rotateInUpRight">
        <img src="<%=assetPath('images/logo.svg')%>" alt="thunderbird" class="common" style="margin-right: -10px; width: 200px;">
        <h2 class="common">welcome to <br> Thunder MQTT Messenger</h2>
        <p class="common">
           enter your details and <br> start your journey with us.
            this is an messaging app with decent Functionalities like :
            
            <br><br>
            
            <b>1.fully secured <br> 2.MQTT protocol <br> 3.free of cost</b>
        </p>
    </div>

    <div class="box1 animated rotateInUpLeft">
        <h2>Come Together And Share Your Mood</h2>
        <div id="form-section" class="common">
            <form action="/users/create_session" method="POST">

               
                <div class="md-form my-5">
                    <i class="fas fa-envelope prefix" style="color: #00c851;"></i>
                    <input type="email" name="email" id="inputIconEx1" class="form-control" required>
                    <label for="inputIconEx1">E-mail address</label>
                </div>

               
                <div class="md-form">
                    <i class="fas fa-lock prefix" style="color: #00c851;"></i>
                    <input type="password" id="inputValidationEx2" name="password" class="form-control validate"
                        required>
                    <label for="inputValidationEx2" data-error="wrong" data-success="right">Type your password</label>
                </div>

               
                <button type="submit" id="sign-in-submit" class="btn btn-success btn-md">Sign in</button>
            </form>
           
        </div>
        <div class="form-section common">
            <hr class="animated bg-info lightSpeedIn delay-1s" style="height: 1px;">
            <a href="/users/auth/google"><button type="button" class="btn btn-danger"><i class="fab fa-google prefix"> </i>  Google</button></a>
            <p class="my-2">Don't have an account? <a href="/users/signUp">Sign up</a></p>
            <p>Why so serious?<a href="/users/forgotPasswordEnterMail" style="color: red;"> Forgot Password!</a></p>
        </div>
    </div>
   
</section>
